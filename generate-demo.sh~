#! /bin/bash


dur=300 # 5 minutes

cp start.svg score.svg

starttime=`date +%s`
difft=0
loop=1
index=0
while [[ $loop > 0 ]]
    do
        ./test.py
        score_img=score$index.svg
        mv score.svg demo/$score_img
        mv Test.svg score.svg
        #sleep 10
        curtime=`date +%s`
        difft=$(($curtime - $starttime))
        #echo loop $curtime $difft $dur $loop
        index=$(($index + 1))
        loop=$(( $index < 14 ))
  done

score_img= score$index.svg
mv score.svg demo/$score_img

cp end.svg score.svg

index=$(($index + 1))
score_img= score$index.svg
mv score.svg demo/$score_img

sleep 20

cp start.svg score.svg
